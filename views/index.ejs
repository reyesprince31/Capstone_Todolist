<main>
    <div>
      <h1>
        Main Section
      </h1>
  
      <form action="/submit" method="POST">
        <input type="text" name="todoItem" placeholder="Enter Todo">
        <button type="submit">Add</button>
      </form>
  
      <section>
        <% if (todoList.length) { %>
          <ul>
            <% todoList.forEach(todo => { %>
              <li><%= todo.item %></li>
            <% }) %>
          </ul>
        <% } else { %>
          <p>No items</p>
        <% } %>
      </section>
    </div>
  </main>
  